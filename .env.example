# ================================
# DDM RAG System Configuration
# ================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ================================
# LLM Configuration
# ================================
# Options: openai, deepseek, google, dashscope, custom
LLM_PROVIDER=google
LLM_MODEL=gemini-2.5-flash-lite
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# ================================
# Custom LLM (if using custom provider)
# ================================
# CUSTOM_LLM_BASE_URL=http://area51r5:8000/v1
# CUSTOM_LLM_API_KEY=empty

# ================================
# API Keys (Optional - only if using these providers)
# ================================
# OpenAI API Key (for GPT models)
# OPENAI_API_KEY=sk-...

# DeepSeek API Key
# DEEPSEEK_API_KEY=sk-...

# Google Gemini API Key
# GOOGLE_API_KEY=...

# DashScope API Key (Alibaba Cloud)
# DASHSCOPE_API_KEY=sk-...

# ================================
# Embedding Configuration
# ================================
# Options: openai, huggingface, local
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=/home/chiweic/repo/synthetic_dataset/emb_finetune_small_32/final
EMBEDDING_DIMENSION=512

# ================================
# Qdrant Vector Database
# ================================
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=ddm_rag
# QDRANT_API_KEY=  # Optional, only if using Qdrant Cloud

# ================================
# RAG Configuration
# ================================
RETRIEVAL_TOP_K=5
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ================================
# API Server Configuration
# ================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["*"]

# ================================
# Performance Settings
# ================================
MAX_WORKERS=4
BATCH_SIZE=5
