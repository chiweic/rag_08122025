# Environment variables for authentication system
# Copy to .env and fill in your values

# Database
DATABASE_URL=sqlite+aiosqlite:///./buddhist_app.db
# For production: postgresql+asyncpg://user:password@localhost/buddhist_app

# JWT Secret (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32

# Resend Email Service
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=佛學普化小助手 <noreply@yourdomain.com>

# App Settings
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# Development Settings
DEBUG=true
ENVIRONMENT=development